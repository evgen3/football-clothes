adobe-letter-spacing(value)
	letter-spacing (value/1000)em

clearfix()
	&:before,
	&:after
		content " "
		display table
	&:after
		clear both

link-reset()
	text-decoration: none
	color inherit

absolute-centered()
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	margin: auto

spriteIcon($icon, $setCenter = false)
	$iconName = '$' + $icon[9]
	retinaSprite(lookup($iconName + '_group'))
	if $setCenter
		position absolute
		left 50%
		top 50%
		margin-left 0-(lookup($iconName + '_width') / 2)
		margin-top 0-(lookup($iconName + '_height') / 2)
